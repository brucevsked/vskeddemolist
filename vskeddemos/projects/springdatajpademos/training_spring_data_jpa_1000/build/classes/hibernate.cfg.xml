<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>         
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/jpa2jdbcdb</property>
        <property name="connection.username">root</property>
        <property name="connection.password">bufu110</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>       
        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>
        <!-- Disable the second-level cache   -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>       
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
		<mapping class="com.training.jpa.domain.AccountInfo"/>
		<mapping class="com.training.jpa.domain.UserInfo"/>		
    </session-factory>
</hibernate-configuration>