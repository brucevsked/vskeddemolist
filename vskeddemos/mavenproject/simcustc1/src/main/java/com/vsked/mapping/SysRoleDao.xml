<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vsked.dao.SysRoleDao">

	<select id="getSysRoleBySrId" resultType="java.util.Map">
		select * from sysRoleT where srId=#{srId}
	</select>
	
	<select id="getSysRoleCount" resultType="java.lang.Integer">
		select count(0) from sysRoleT 
		<include refid="myWhere" />
	</select>
	
	<select id="getSysRoleList" resultType="java.util.Map">
		select * from sysRoleT 
		<include refid="myWhere" />
		ORDER BY srAddTime desc
	</select>
	
	<insert id="sysRoleAdd" >
	  <selectKey keyProperty="myuuid" resultType="String" order="BEFORE">select rawtohex(sys_guid()) as "myuuid" from dual</selectKey> 
	  insert into sysRoleT(srId,srName) VALUES(#{myuuid,jdbcType=NVARCHAR},#{srName,jdbcType=NVARCHAR})
	</insert>
	
	<update id="sysRoleEdit">
	  update sysRoleT set srName=#{srName,jdbcType=NVARCHAR} where srId=#{srId,jdbcType=NVARCHAR}
	</update>
	
    <delete id="sysRoleDel">
      delete from sysRoleT where srId=#{srId,jdbcType=NVARCHAR}
    </delete>
    
	<sql id="myWhere">
		<where>
			<if test="srName !=null and srName != '' ">
				and srName like  '%'||#{srName,jdbcType=NVARCHAR}||'%' 
			</if>
		</where>
	</sql>

</mapper>