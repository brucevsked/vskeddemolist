<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">

	<Properties>
		<!-- <Property name="logpath">${sys:catalina.home}/logs/commonscodecdemo/</Property> -->
<Property name="logpath">/logs/commonscodecdemo/</Property>
		<Property name="logname">commonscodecdemolog</Property>
	</Properties>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L [%t]  - %msg%n" />
		</Console>
		<RollingFile name="outRollingFile" fileName="${logpath}/${logname}.log"
			filePattern="${logpath}/$${date:yyyy-MM}/${logname}-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n" />
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true" interval="24" />
			</Policies>
			<!-- 最多备份90个 -->
			<DefaultRolloverStrategy max="90" />
		</RollingFile>
	</Appenders>

	<loggers>
	    <!-- 指定包日志级别 -->
		<logger name="org.springframework" level="error"></logger>
		<logger name="com.mchange" level="error"></logger>
		<root level="ALL">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="outRollingFile" />
		</root>
	</loggers>

</Configuration>